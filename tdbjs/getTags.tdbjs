var db_nm = "data";
var col_nm = "all";

var db0 = db.getSiblingDB( db_nm );
var col0 = db0.getCollection( col_nm );
var allCols = db0.getCollectionNames();


var tags = {}
var r = {
	sites : []
	, tags : {}
	, brands : []
}

col0.find({}).forEach(function(doc){

    doc.info.forEach(function(item){
        if( !tags[ item ] ) tags[ item ] = 1;
        else ++tags[ item ];
    })
    var brand = doc.brand.trim();
    if( r.brands.indexOf( brand ) == -1 ) r.brands.push( brand )
})

allCols.forEach(function(col){

	if( col != "all" ){
		r.sites.push( col )
	}
})


var s,so;
for( s in tags ){
    so = tags[ s ]
    if( so > 100 )
    {
        r.tags[ s ] = so;
    }
}

r.brands.sort();

printjson( r )